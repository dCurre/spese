<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.loadspese.TabSaldoListaSpeseFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/totale_lista_spese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTALE: "
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="8pt"
            tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lista_saldo_dare_avere_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/totale_lista_spese"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/saldo_not_printable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Non Ã¨ possibile calcolare un saldo senza spese :P"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>