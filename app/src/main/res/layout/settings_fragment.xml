<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:layout_margin="40dp"
    tools:context=".main.SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/uid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UID: " />

        <TextView
            android:id="@+id/text_view_tema_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/uid"
            android:text="Tema scuro" />

        <Switch
            android:id="@+id/switch_dark_theme"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/text_view_tema_switch"
            android:layout_below="@id/uid"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            />

        <Button
            android:id="@+id/sign_out_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_below="@id/text_view_tema_switch"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="241dp" />
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>