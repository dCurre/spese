<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/partecipanti_list_item"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/owner_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_crown"
        android:backgroundTint="@color/yellow"
        android:contentDescription="Owner" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tw_partecipante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/owner_icon"
        android:autoSizeTextType="uniform"
        android:breakStrategy="balanced"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/partecipante"
        android:textColor="@color/textPrimary"
        android:textSize="9pt"
        android:textStyle="bold"/>

</RelativeLayout>